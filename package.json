{
  "name": "zoom-talking-stick",
  "version": "1.0.0",
  "description": "",
  "main": "chatbot.js",
  "type": "module",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathIgnorePatterns=test/integration",
    "test:integration": "jest --testPathPattern=test/integration --runInBand",
    "start": "node chatbot.js",
    "dev": "nodemon --inspect chatbot.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "db:up": "docker-compose up -d",
    "db:migrate": "postgrator",
    "db:reset": "postgrator 1 --config=./postgrator-populate.json && postgrator 0 && npm run db:migrate && npm run db:populate",
    "db:populate": "postgrator --config=./postgrator-populate.json",
    "db:down": "docker-compose down",
    "db:connect": "docker-compose exec postgres psql -U postgres -d postgres"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^14.3.2",
    "fastify": "^3.27.0",
    "fastify-plugin": "^3.0.1",
    "fastify-postgres": "^3.6.0",
    "http-errors": "^2.0.0",
    "node-fetch": "^3.2.0",
    "pg": "^8.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@jest/globals": "^27.4.6",
    "babel-jest": "^27.4.6",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "postgrator-cli": "^4.0.0",
    "prettier": "^2.5.1"
  }
}
