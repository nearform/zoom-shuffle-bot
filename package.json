{
  "name": "zoom-talking-stick",
  "version": "1.0.0",
  "description": "",
  "main": "chatbot.js",
  "type": "module",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathIgnorePatterns=test/integration",
    "test:integration": "jest --testPathPattern=test/integration --runInBand",
    "start": "npm run db:migrate && node chatbot.js",
    "dev": "nodemon chatbot.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "db:up": "docker-compose up -d",
    "db:migrate": "postgrator --config=./postgrator.cjs",
    "db:migrate:rollback": "postgrator 0 --config=./postgrator.cjs",
    "db:reset": "npm run db:populate:rollback && npm run db:migrate:rollback && npm run db:migrate && npm run db:populate",
    "db:populate": "postgrator --config=./postgrator-populate.cjs",
    "db:populate:rollback": "postgrator 0 --config=./postgrator-populate.cjs",
    "db:down": "docker-compose down",
    "db:connect": "docker-compose exec postgres psql -U postgres -d postgres"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "desm": "^1.2.0",
    "dotenv": "^16.0.0",
    "env-schema": "^4.0.0",
    "fastify": "^3.29.0",
    "fastify-plugin": "^3.0.1",
    "fastify-postgres": "^3.7.0",
    "fluent-json-schema": "^3.1.0",
    "http-errors": "^2.0.0",
    "node-fetch": "^3.2.4",
    "pg": "^8.7.3",
    "pino-pretty": "^7.6.1",
    "postgrator-cli": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.16.11",
    "@jest/globals": "^28.0.3",
    "babel-jest": "^28.0.1",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.0.2",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2"
  }
}
